<%- include('partials/header.ejs') %>

    <div class="container pt-3 col-lg-6">
        <% if (locals.messages.errors) { %>
            <% messages.errors.forEach( el => { %>
                <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %>    
        <% } %>

        <% if (locals.messages.info) { %>
            <% messages.info.forEach( el => { %>
                <div class="alert alert-info"><%= el.msg %></div>
            <% }) %>    
        <% } %>

        <h1 class="h1 text-center text-orange">Don't have an account? Sign up!</h1>

        <form action="/userSignup" method="POST">
            <div class="form-group mt-5 row">
                <label for="firstName" class="col-sm-3 col-form-label">First Name:</label>
                <div class="col-sm-9">
                    <input type="text" name="firstname" class="form-control" id="firstName" placeholder="">
                </div>   
            </div>

            <div class="form-group mt-5 row">
                <label for="lastName" class="col-sm-3 col-form-label">Last Name:</label>
                <div class="col-sm-9">
                    <input type="text" name="lastname" class="form-control" id="lastName" placeholder="">
                </div>   
            </div>

            <div class="form-group mt-5 row">
                <label for="email" class="col-sm-3 col-form-label">Email:</label>
                <div class="col-sm-9">
                    <input type="email" name="email" class="form-control" id="email" placeholder="">
                </div>   
            </div>

            <div class="form-group mt-4 row">
                <label for="password" class="col-sm-3 col-form-label">Password:</label>
                <div class="col-sm-9">
                    <input type="password" name="password" class="form-control" id="password" placeholder="">
                </div>
            </div>

            <div class="form-group mt-4 row">
                <label for="confirm-password" class="col-sm-3 col-form-label">Confirm Password:</label>
                <div class="col-sm-9">
                    <input type="password" name="confirmPassword" class="form-control" id="confirm-password" placeholder="">
                </div>
            </div>
            
            <div class="row">
                <span class="col-3"></span>
                <div class="form-group mt-5 d-flex col-9 justify-content-center">
                    <button type="submit" class="btn text-white bg-orange py-2 px-5">Sign up</button>
                </div>
            </div>
        </form>
    </div>

<%- include('partials/footer.ejs') %>