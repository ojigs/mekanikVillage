<p%- include('partials/header.ejs') %>

<!-- hero -->
<section id="home" class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="wow fadeInUp mb-3 mb-lg-5" data-wow-delay=".2s">Discover the <span>Right Parts</span> for your Car </h1>
                    <p class="wow fadeInUp mb-3 mb-lg-5" data-wow-delay=".4s">
                        ...rebum provides access to the biggest selection of ready-to-ship aftermarket parts, tools, and accessories, benefiting significant automotive sectors.
                    </p>
                    <a href="" rel="nofollow" class="btn main-btn btn-danger wow fadeInUp"
                        data-wow-delay=".6s">Find your car</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-img wow fadeInUp" data-wow-delay=".5s">
                    <img src="/img/image2.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end hero -->

<!-- partners -->
<section id="partner" class="partner-section pt-60 pb-60 bg-light">
    <div class="container">
        <div class="row justify-content-around flex-wrap align-items-center">
            <div class="col-lg-2 col-sm-6 partner-container">
                <div class="single-partner wow fadeInUp" data-wow-delay=".2s">
                    <img src="/img/toyota.png" width="150px" height="" alt="Toyota">
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 partner-container">
                <div class="single-partner wow fadeInUp" data-wow-delay=".4s">
                    <img src="/img/honda.png" width="150px" height="" alt="Honda">
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 partner-container">
                <div class="single-partner wow fadeInUp" data-wow-delay=".6s">
                    <img src="/img/mercedes.png" width="150px" height="" alt="Mercedes">
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 partner-container">
                <div class="single-partner wow fadeInUp" data-wow-delay=".8s">
                    <img src="/img/kia.png" width="150px" height="" alt="Kia">
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 partner-container">
                <div class="single-partner wow fadeInUp" data-wow-delay=".8s">
                    <img src="/img/hyundai.png" width="150px" height="" alt="Hyundai">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end partners -->

<!-- categories -->
<section class="categories pt-60 pb-60">
    <h1 class="text-center text-dark">Categories</h1>
    <div class="container">
        <!-- lubrication -->
        <section class="lubrication row">
            <div class="col-4">
                <h2>Lubrication</h2>
                <img src="/img/lubrication.png" alt="All things oil">
            </div>
            <div class="col-lg-8 row flex-wrap justify-content-around align-items-center">
                <% for (let i = 0; i < lubrication.length; i++) {%>
                    <div class="card">
                        <img src="<%= lubrication[i].image %>" alt="" class="card-image-top">
                        <div class="card-body">
                            <p class="card-text"><%= lubrication[i].name %></p>
                        </div>
                    </div>
                <%}%>
            </div>  
        </section>
    </div>
</section>

<%- include('partials/footer.ejs') %>