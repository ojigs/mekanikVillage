<%- include('partials/header.ejs') %>

<div class="container pt-3 col-lg-6">
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>
    <% } %>

    <% if (locals.messages.info) { %>
        <% messages.info.forEach( el => { %>
            <div class="alert alert-info"><%= el.msg %></div>
        <% }) %>
    <% } %>

    <h1 class="fw-bold">Login to Your Account</h1>
    <p class="mt-3">Mekanik Village makes your shopping easy</p>

    <form action="/userLogin" method="POST">
        <div class="form-group mt-5 row">
            <label for="email" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input type="email" name="email" class="form-control" id="email" placeholder="johndoe@example.com">
            </div>
        </div>

        <div class="form-group mt-4 row">
            <label for="password" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password">
            </div>
        </div>

        <div class="form-group mt-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-danger">Sign in</button>
        </div>
        <div class="d-flex mt-3 justify-content-center">
            <span>Not a user? <a href="/userSignup">Sign up</a></span>
        </div>
        
    </form>

</div>

<%- include('partials/footer.ejs') %>